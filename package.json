{
  "name": "pihhthon-header-formatter",
  "displayName": "Pihhthon Header Formatter",
  "description": "Auto-format Python comment headers (aligned and pretty).",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.formatCommentHeaders"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.formatCommentHeaders",
        "title": "Format Comment Headers"
      },
      {
        "command": "extension.formatCodeBlock",
        "title": "Format Code Block"
      }
    ],
    "keybindings": [
      {
        "command": "extension.formatCommentHeaders",
        "key": "ctrl+alt+c",
        "when": "editorTextFocus && editorLangId =~ /^(python|javascript|javascriptreact|typescript|typescriptreact)$/"
      },
      {
        "command": "extension.formatCodeBlock",
        "key": "ctrl+alt+f",
        "when": "editorTextFocus && editorLangId =~ /^(python|javascript|javascriptreact|typescript|typescriptreact)$/"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "pack": "vsce package --no-dependencies",
    "load": "pnpm install && pnpm run compile && pnpm dedupe && pnpm run pack &&  code --install-extension pihhthon-header-formatter-0.0.1.vsix"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "vsce": "^2.15.0"
  },
  "pnpm": {
    "overrides": {
      "vscode": "^1.101.0"
    }
  }
}
